<?xml version="1.0"?>
<xod>
  <alias name="Color" class="thinwire.ui.style.Color"/>
  <alias name="Style" class="thinwire.ui.style.Style"/>
  
  <!-- system color override -->
  <Color id="activeborder" valueOf="rgb(212, 208, 200)"/>  
  <Color id="activecaption" valueOf="rgb(0, 84, 227)"/>
  <Color id="appworkspace" valueOf="rgb(128, 128, 128)"/>
  <Color id="background" valueOf="rgb(0, 78, 152)"/>
  <Color id="buttonface" valueOf="rgb(236, 233, 216)"/>
  <Color id="buttonhighlight" valueOf="rgb(255, 255, 255)"/>
  <Color id="buttonshadow" valueOf="rgb(172, 168, 153)"/>
  <Color id="buttontext" valueOf="rgb(0, 0, 0)"/>
  <Color id="captiontext" valueOf="rgb(255, 255, 255)"/>
  <Color id="graytext" valueOf="rgb(172, 168, 153)"/>
  <Color id="highlight" valueOf="rgb(49, 106, 197)"/>
  <Color id="highlighttext" valueOf="rgb(255, 255, 255)"/>
  <Color id="inactiveborder" valueOf="rgb(212, 208, 200)"/>
  <Color id="inactivecaption" valueOf="rgb(122, 150, 223)"/>
  <Color id="inactivecaptiontext" valueOf="rgb(216, 228, 248)"/>
  <Color id="infobackground" valueOf="rgb(255, 255, 225)"/>
  <Color id="infotext" valueOf="rgb(0, 0, 0)"/>
  <Color id="menu" valueOf="rgb(255, 255, 255)"/>
  <Color id="menutext" valueOf="rgb(0, 0, 0)"/>
  <Color id="scrollbar" valueOf="rgb(212, 208, 200)"/>
  <Color id="threeddarkshadow" valueOf="rgb(113, 111, 100)"/>
  <Color id="threedface" valueOf="rgb(236, 233, 216)"/>
  <Color id="threedhighlight" valueOf="rgb(255, 255, 255)"/>
  <Color id="threedlightshadow" valueOf="rgb(241, 239, 226)"/>
  <Color id="threedshadow" valueOf="rgb(172, 168, 153)"/>
  <Color id="window" valueOf="rgb(255, 255, 255)"/>
  <Color id="windowframe" valueOf="rgb(0, 0, 0)"/>
  <Color id="windowtext" valueOf="rgb(0, 0, 0)"/>
  
  <Style id="default">
    <background color="transparent"/>
    <font family="Tahoma, sans-serif" color="windowtext" size="8" italic="false" bold="false" underline="false" strike="false"/>
    <border size="0" type="none" color="transparent"/>
    <fX positionChange="none" sizeChange="none" visibleChange="none"/>
  </Style>
  
  <Style id="default.inset" copy="default">
    <background color="window"/>
    <border size="2" type="inset" color="threedface"/>
  </Style>

  <Style id="default.outset" copy="default">
    <background color="threedface"/>
    <border size="2" type="outset" color="threedface"/>
  </Style>
  
  <Style id="Button" copy="default.outset">
    <background color="buttonface"/>
    <font color="buttontext"/>
    <border color="buttonface"/>
  </Style>
  
  <Style id="CheckBox" copy="default.inset">
    <border color="buttonface"/>
  </Style>
  
  <Style id="Dialog" copy="default.outset">
    <background color="threedface"/>
    <font color="captiontext" bold="true"/>
  </Style>
  
  <Style id="DateBox" copy="default.inset"/>
  
  <Style id="Divider" copy="default">
    <border size="1" type="inset" color="threedface"/>
  </Style>
  
  <Style id="DropDown" copy="default.inset"/>
  
  <Style id="Frame" copy="default">
    <background color="window"/>
  </Style>
  
  <Style id="GridBox" copy="default.inset"/>
  
  <Style id="Hyperlink" copy="default">
    <font color="blue" underline="true"/>
  </Style>
  
  <Style id="Image" copy="default"/>
  
  <Style id="Label" copy="default"/>
  
  <Style id="Menu" copy="default.outset">
    <font color="menutext"/>
  </Style>
  
  <Style id="Panel" copy="default">
    <background color="threedface"/>
  </Style>
  
  <Style id="ProgressBar" copy="default.inset">
    <font color="highlight"/>
  </Style>
  
  <Style id="RadioButton" copy="CheckBox">
    <border image="${xod.file}rbBorder.png"/>
  </Style>
  
  <Style id="Slider" copy="Button"/>
  
  <Style id="TabFolder" copy="default.outset"/>
  
  <!--NOTE: Border is defined by TabFolder, not TabSheet-->
  <Style id="TabSheet" copy="default.outset"/>
  
  <Style id="TextArea" copy="default.inset"/>
  
  <Style id="TextField" copy="default.inset"/>
  
  <Style id="Tree" copy="default.inset"/>
  
  <!-- NOTE: Not sure how many of these settings actually have an effect since we use
  an IFRAME to render the WebBrowser control.  For instance the background color will mean nothing. -->
  <Style id="WebBrowser" copy="default.inset"/>
</xod>

